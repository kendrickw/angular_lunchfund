<!DOCTYPE html>
<html ng-app="registration">
    <head>
        <title>LunchFund App Registration</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="stylesheet" type="text/css" href="bootstrap/dist/css/bootstrap.min.css" />

        <link rel="stylesheet" type="text/css" href="css/registration.min.css" />
    </head>

    <body ng-controller="RegController">

        <!-- Pass Node.js variables into HTML page -->
        <script type="text/javascript">
            var email=<%- JSON.stringify(email) %>;
            var lunchers=<%- JSON.stringify(lunchers) %>;
        </script>

        <div class="site-wrapper">
            <div class="site-wrapper-inner">
                <div class="cover-container">

                    <div class="masthead clearfix">
                        <div class="inner">
                            <img src="images/icon-iphone-114.png"
                                 alt="Lunchfund Logo" class="img-center"></img>
                        </div>
                    </div>

                    <div class="inner cover">

                        <form>
                            <div class="form-group">
                                <label for="luncher">Register <code>{{email}}</code> with:</label>
                                <select class="form-control" id="luncher"
                                        ng-model="selected"
                                        ng-options="user as user.username for user in lunchers">
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary"
                                        ng-click="register(selected)">Register as {{selected.username}}</button>
                        </form>

                    </div>

                    <div class="mastfoot">
                        <div class="inner">
                            <p><%- COPYRIGHT_TEXT %></p>
                        </div>
                    </div>

                </div> <!-- /cover-container -->
            </div> <!-- site-wrapper-inner -->
        </div> <!-- site-wrapper -->

        <script type="text/javascript" src="angular/angular.min.js"></script>
        <script type="text/javascript" src="angular-bootstrap/ui-bootstrap-tpls.min.js"></script>

        <script type="text/javascript" src="js/registration.min.js"></script>
    </body>
</html>
