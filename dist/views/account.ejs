<!DOCTYPE html>
<html ng-app="account">
  <head>
    <title>LunchFund</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="angular-aside/dist/css/angular-aside.min.css" />
    <link rel="stylesheet" type="text/css" href="css/sidebar.css" />

    <body ng-controller="MainCtrl">

      <!-- Brand and toggle get grouped for better mobile display -->
      <nav class="navbar navbar-default" role="navigation">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" ng-init="navCollapsed = true"
                  ng-click="navCollapsed = !navCollapsed">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#" ng-click="openAside('left')"><i class="glyphicon glyphicon-menu-hamburger"></i></a>
        </div><!-- /navbar-header -->

        <div class="collapse navbar-collapse" ng-class="{in: !navCollapsed}">

          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>

    <script type="text/javascript" src="angular/angular.min.js"></script>
    <script type="text/javascript" src="angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <script type="text/javascript" src="angular-ui-router/release/angular-ui-router.min.js"></script>
    <script type="text/javascript" src="angular-aside/dist/js/angular-aside.min.js"></script>

    <script type="text/javascript" src="js/account.js"></script>


        <div id="page-wrapper" ng-class="{'open': toggle}" ng-cloak>

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar">
                    <li class="sidebar-main">
                        <a ng-click="toggleSidebar()">
                            Lunchfund
                            <span class="menu-icon glyphicon glyphicon-transfer"></span>
                        </a>
                    </li>
                    <!--
                    <li class="sidebar-title"><span>NAVIGATION</span></li>
                    -->
                    <li class="sidebar-list" ng-repeat="page in allPages">
                        <a href="{{page.link}}" ng-click="setPage(page.id)">{{page.name}}<span class="menu-icon {{page.icon}}"></span></a>
                    </li>
                </ul>

                <div class="sidebar-footer">
                    <div class="col-xs-6">
                        <a href="https://github.com/kendrickw/angular_lunchfund" target="_blank">
                            Github
                        </a>
                    </div>
                    <div class="col-xs-6">
                        <a href="https://github.com/kendrickw/angular_lunchfund/README.md" target="_blank">
                            About
                        </a>
                    </div>
                </div>
            </div> <!-- End Sidebar -->

            <div id="content-wrapper">
                <div class="page-content">

                    <!-- Header Bar -->
                    <div class="row header">
                        <div class="col-xs-12">
                            <div class="user pull-right" ng-controller="ProfileController">
                                <div class="item dropdown">
                                    <a href="#" class="dropdown-toggle" style="text-decoration: none;">
                                        <div ng-if="profileModel.loginUser().picture">
                                            <img ng-src="{{profileModel.loginUser().picture}}"></img>
                                        </div>
                                        <div ng-if="!profileModel.loginUser().picture" class="profile-text">
                                            {{profileModel.loginUser().initial}}
                                        </div>
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li class="dropdown-header">
                                            {{profileModel.loginUser().username}}
                                        </li>
                                        <li class="divider"></li>
                                        <li class="dropdown-header link">
                                            Email: {{profileModel.loginUser().email}}
                                        </li>
                                        <li class="dropdown-header link">
                                            Firstname: {{profileModel.loginUser().firstname}}
                                        </li>
                                        <li class="dropdown-header link">
                                            Lastname: {{profileModel.loginUser().lastname}}
                                        </li>
                                        <li class="divider"></li>
                                        <li class="link">
                                            <a href="/logout">Logout</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="meta">
                                <div class="page">
                                    {{getPage().name}}
                                </div>
                                <div class="breadcrumb-links">
                                    {{getPage().description}}
                                </div>
                            </div>
                        </div>
                    </div> <!-- End Header Bar -->

                    <!-- Main Content -->
                    <div ui-view></div>

                </div><!-- End Page Content -->
            </div><!-- End Content Wrapper -->
        </div><!-- End Page Wrapper -->

  </body>
</html>